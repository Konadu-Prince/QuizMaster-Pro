# Production Environment Configuration Template
# Copy this file to .env and update with your production values

# Server Configuration
NODE_ENV=production
PORT=5002
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://your-production-mongodb-uri
MONGODB_TEST_URI=mongodb://your-test-mongodb-uri

# JWT Configuration - Generate strong secrets
JWT_SECRET=your-production-jwt-secret-key-minimum-32-characters
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-production-refresh-secret-key-minimum-32-characters
JWT_REFRESH_EXPIRE=30d

# Email Configuration - Use production email service
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USERNAME=your-production-email@yourdomain.com
EMAIL_PASSWORD=your-production-email-password

# Cloudinary Configuration - Use production Cloudinary account
CLOUDINARY_CLOUD_NAME=your-production-cloud-name
CLOUDINARY_API_KEY=your-production-api-key
CLOUDINARY_API_SECRET=your-production-api-secret

# Stripe Configuration - Use production Stripe keys
STRIPE_SECRET_KEY=sk_live_your-production-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-production-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret
STRIPE_PRO_PRICE_ID=price_your_production_pro_price_id
STRIPE_ENTERPRISE_PRICE_ID=price_your_production_enterprise_price_id

# Redis Configuration - Use production Redis instance
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-production-redis-password
REDIS_DB=0
REDIS_URL=redis://your-production-redis-url

# Performance Configuration
LOG_LEVEL=warn
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# CORS Configuration - Your production domain
FRONTEND_URL=https://yourdomain.com

# Analytics - Production tracking IDs
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-production-mixpanel-token

# Monitoring - Production monitoring
SENTRY_DSN=your-production-sentry-dsn

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-production-session-secret

# API Keys
OPENAI_API_KEY=your-openai-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# External Services
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-production-s3-bucket
